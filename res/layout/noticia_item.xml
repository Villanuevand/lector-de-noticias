<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
   
    <ImageView 
        android:id="@+id/img_precarga"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/imagenContent"
        android:src="@drawable/ic_imagen_precarga"/> 

    <ImageView
        android:id="@+id/ivImagenListado"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/imagenContent" />

    <TextView
        android:id="@+id/tvTituloListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivImagenListado"
        android:layout_marginBottom="6dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:lineSpacingExtra="-4dp"/>

    <TextView
        android:id="@+id/tvDescripcionListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivImagenListado"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_below="@id/tvTituloListado"/>

</RelativeLayout>
